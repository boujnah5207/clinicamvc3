    $(document).ready(
        function () {
            $.datepicker.setDefaults($.datepicker.regional["pt-BR"]);
            $(".datepicker").datepicker(             
            {
                autoSize: true,
                changeMonth: true,
                changeYear: true
            }); ;


            $("fieldset").addClass("ui-widget ui-widget-content ui-corner-left ui-corner-right");
            $("input").addClass("ui-widget ui-widget-content ui-corner-left ui-corner-right");
            $("textarea").addClass("ui-widget ui-widget-content ui-corner-left ui-corner-right");
            $("select").addClass("ui-widget ui-widget-content ui-corner-left ui-corner-right");
            /*$("select").combobox();*/
            $("input:submit, input:button, a, button").button();
            /* Descricao                  0 */
            /* EspecialidadeId            1 */
            /* FuncionarioEspecialidadeId 2 */

            $('.tbl').dataTable(
                {
                    "bJQueryUI": true,
                    "aoColumnDefs":
                    [
                    ],
                    "sDom": 'T<"clear">lfrtip',
                    "oTableTools":
                    {
                        "aButtons": [],
                        "sRowSelect": "single"
                    },
                    "oLanguage":
                    {
                        "sLengthMenu": "Mostrar _MENU_ registros por página.",
                        "sZeroRecords": " ",
                        "sInfo": "Mostrando _START_ até _END_ de _TOTAL_ registros",
                        "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                        "sInfoFiltered": " ",
                        "sSearch": "Buscar:"
                    },
                    "bLengthChange": false,
                    "bAutoWidth": false,
                    "bSort": true,
                    "bInfo": true,
                    "bFilter": true,
                    "sPaginationType": "two_button"

                }
            );
        }
    );
  
</script>
<html>
<head>
    <title>@ViewBag.Title</title>
    
</head>
<body>
    <div class="page ui-tabs ui-corner-all">
        <div id="header" class="ui-widget-header">
            <div id="title">
                <h1> Clinica da Saúde </h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer ui-corner-top">
                <ul id="menu" class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">                    
                    @if (User.IsInRole(FuncionarioController.funcao.Secretaria.ToString()) || User.IsInRole(FuncionarioController.funcao.Medico.ToString()))
                    {
                        <li class="ui-state-default ui-corner-top">@Html.ActionLink("Consulta", "Index", "Consulta").If(User.IsInRole(FuncionarioController.funcao.Secretaria.ToString()) || User.IsInRole(FuncionarioController.funcao.Medico.ToString()))</li>
                    }
                    @if (User.IsInRole(FuncionarioController.funcao.Administrador.ToString()))
                    {
                        <li class="ui-state-default ui-corner-top">@Html.ActionLink("Plano de Saude", "Index", "PlanoSaude").If(User.IsInRole(FuncionarioController.funcao.Administrador.ToString()))</li>
                    }
                    @if (User.IsInRole(FuncionarioController.funcao.Secretaria.ToString()))
                    {  
                        <li class="ui-state-default ui-corner-top">@Html.ActionLink("Paciente", "Index", "Paciente").If(User.IsInRole(FuncionarioController.funcao.Secretaria.ToString()))</li>
                    }
                    @if (User.IsInRole(FuncionarioController.funcao.Administrador.ToString()))
                    {  
                        <li class="ui-state-default ui-corner-top">@Html.ActionLink("Funcionário", "Index", "Funcionario").If(User.IsInRole(FuncionarioController.funcao.Administrador.ToString()))</li>
                    }
                </ul>
            </div>
        </div>
        <div id="main" class="ui-widget-content ui-widget ui-corner-bottom">
            @RenderBody()
            <div id="footer" class="ui-corner-bottom" >
            </div>
        </div>

    </div>
</body>
</html>
