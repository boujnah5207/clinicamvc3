@model IEnumerable<ClinicaMVC3.Models.PlanoSaude>

@{
    
}

<h2> Listagem de @ViewBag.Title </h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>

@if (Model.Count()==0) {
	<span>Não há registros para listar.</span>
}else{


<table class="tbl display">
    <thead>
    <tr>
        <th>
			@foreach (var item in Model)
            {
				@Html.LabelFor(model => item.Descricao)
				break;
			}
         </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PlanoSaudeId })
            @Html.ActionLink("Visualizar", "Details", new { id=item.PlanoSaudeId })
            @Html.ActionLink("Excluir", "Delete", new { id=item.PlanoSaudeId })
        </td>
    </tr>
}
</tbody>

</table>
}
